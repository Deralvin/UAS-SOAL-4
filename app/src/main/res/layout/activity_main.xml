<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APLIKASI PENDATAAN WISATAWAN"
        android:gravity="center"

        />
    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        />

    <EditText
        android:id="@+id/warga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kewarganegaraan"
        />

    <EditText
        android:id="@+id/tujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tujuan Wisata"
        />
    <Button
        android:id="@+id/show_tugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tamppil"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textresult"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/value_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/value_warga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/value_tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

</LinearLayout>